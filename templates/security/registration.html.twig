{% extends 'base.html.twig' %}

{% form_theme form 'nuikit_form_layout.html.twig' %}

{% block body %}

    <div class="page-header" filter-color="orange">

        <div class="page-header-image" style="background-image:url(../assets/img/ST_H6.png)"></div>

        <div class="content">
            <div class="container">
                <div class="card card-login card-plain d-flex justify-content-center align-items-center pb-5 rounded">
                    {{ form_start(form) }}
                        <div class="card-header text-center mb-5 mt-5 mt-md-4">
                            <div class="logo-container pb-0 pt-4 pt-md-5 pb-md-4">
                                <h1>Inscription</h1>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column flex-md-row pt-4 rounded" style="background-color: rgba(100, 103, 116, .4);">
                            <div class="mx-auto px-4 py-1">
                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.firstName, {'label': 'Nom', 'attr':{'placeholder': 'Votre nom'}}) }}
                                </div>

                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.lastName, {'label': 'Prénom', 'attr': {'placeholder': 'Votre prénom'}}) }}
                                </div>

                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Adresse email'}}) }}
                                </div>
                            </div>

                            <div class="mx-auto px-4 py-1">
                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.pseudo, {'label': 'Pseudo', 'attr': {'placeholder': 'Votre pseudo'}}) }}
                                </div>

                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Huit caractères minimum'}}) }}
                                </div>

                                <div class="input-group form-group-no-border input-lg">
                                    {{ form_row(form.confirmPassword, {'label': 'Confirmation', 'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
                                </div>
                                <div class="card-footer mt-5">
                                    <button type="submit" class="btn btn-round btn-lg btn-block text-dark font-weight-bold" style="background-color: #5ce2ff;">Inscription</button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
