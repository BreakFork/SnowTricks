{% extends 'base.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Page de connexion du site SnowTricks">
{% endblock %}

{% block title %}
    <title>Connexion</title>
{% endblock %}

{% block body %}
    <div class="login-page">

        <div class="page-header" filter-color="orange">

            <div class="page-header-image" style="background-image:url(../assets/img/ST_Header.jpg)"></div>

            <div class="content">
                <div class="container">
                    <div class="col-md-6 ml-auto mr-auto">
                        <div class="card card-login card-plain">

                            <form class="form  mt-5" action="{{ path('securityLogin') }}" method="post">
                                <div class="card-header text-center">
                                    <div>
                                        <h1>Connexion</h1>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="input-group form-group-no-border input-lg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user-circle"></i></span>
                                        </div>
                                        <input type="text" class="form-control font-weight-bold" placeholder="Adresse email" required name="_username">
                                    </div>
                                    <div class="input-group form-group-no-border input-lg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input type="password" class="form-control font-weight-bold" placeholder="Mot de passe" required name="_password">
                                    </div>
                                </div>
                                <div class="card-footer text-center my-4">
                                    <button type="submit" class="btn btn-round btn-lg btn-block text-dark font-weight-bold" style="background-color: #5ce2ff;">Se connecter</button>
                                </div>
                                <div class="d-flex justify-content-between px-2 mx-1">
                                    <div class="align-self-start">
                                        <h6>
                                            <a href="{{ path('securityRegistration') }}" class="link footer-link">Créer un compte ?</a>
                                        </h6>
                                    </div>
                                    <div class="align-self-end">
                                        <h6>
                                            <a href="#pablo" class="link footer-link">Mot de passe oublié ?</a>
                                        </h6>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
